
<section>

    <a href="/dashboard" class="is-pulled-right"> &larr; back to dashboard</a>
    <h2 class="is-size-4 has-text-weight-semibold">Create New Activity</h2>
    <hr>

    <form class="new-post-form">
        <div>
            <label for="post-title">
                Trailhead:
            </label>
            <input class="input" type="text" id="post-title" name="post-title" />
        </div>
        <div>
            <label for="post-canyon">
                Canyon:
            </label>
            <input class="input" name="post-canyon" type="text" value="{{post.post_content}}" />

            <label for="post-time">
                Time:
            </label>
            <input class="input" name="post-time" type="time" value="{{post.post_content}}" />

            <label for="post-date">
                Date:
            </label>
            <input class="input" name="post-date" type="date" value="{{post.post_content}}" />

            <label for="post-activity">
                Activity:
            </label>
            <input class="input" name="post-activity" type="text" value="{{post.post_content}}" />

        </div>
        <button type="submit" class="button is-info is-pulled-right has-text-black">
            Create Activity
        </button>
    </form>
</section>

